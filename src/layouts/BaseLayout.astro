---
interface Props {
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO -->
  <title>{title}</title>
  <meta name="description" content={description}>
  {keywords && <meta name="keywords" content={keywords}>}
  <meta name="geo.region" content="FR">
  <meta name="geo.placename" content="France, Île-de-France">
  <link rel="canonical" content="https://shindotech.fr">
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:url" content="https://shindotech.fr">
  <meta property="og:locale" content="fr_FR">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  
  <!-- SEO Local -->
  <meta name="robots" content="index, follow">
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-color: #1a4d6d;
      --secondary-color: #2c6b8f;
      --accent-color: #4a90b5;
      --text-dark: #2c3e50;
      --text-light: #555;
      --bg-light: #e8f1f5;
      --bg-texture: #a4c3d2;
      --border-radius: 12px;
      --transition: all 0.3s ease;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.7;
      color: var(--text-dark);
      background-image: url('/images/textures/3.png');
      background-repeat: repeat;
      background-size: auto;
    }

    /* Bannière principale */
    .header-banner {
      background-image: url('/images/baniere_v1.png');
      background-size: 35%;
      background-position: center;
      background-repeat: no-repeat;
      height: 180px;
    }
    /* Ajustement mobile */
    @media (max-width: 768px) {
      .header-banner {
        height: 250px;
        background-size: 80%;
      }
    }

    .logo-section {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .logo-placeholder {
      width: 80px;
      height: 80px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
      overflow: hidden;
    }
    
    .logo-placeholder img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .brand {
      color: white;
    }

    .brand h1 {
      font-size: 1.8rem;
      font-weight: 700;
      letter-spacing: -0.5px;
    }

    .brand p {
      font-size: 0.9rem;
      opacity: 0.9;
      margin-top: 0.2rem;
    }

    nav a {
      color: white;
      text-decoration: none;
      padding: 0.5rem 1.5rem;
      border-radius: 25px;
      transition: var(--transition);
      font-weight: 500;
      backdrop-filter: blur(10px);
    }

    nav a:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    /* Hero Section avec texture */
    .hero {
      background-size: cover, 150px 150px;
      padding: 4rem 20px;
      text-align: center;
    }

    .hero-content {
      max-width: 900px;
      margin: 0 auto;
    }

    .hero h2 {
      font-size: 2em;
      font-variant: small-caps;
      color: black;
      margin-bottom: 1.5rem;
      line-height: 1.3;
      font-family: "Calibri", sans-serif;
    }

    .hero p {
      font-size: 1.05rem;
      margin-bottom: 0.5rem;
      font-family: "Roboto", sans-serif;
    }

    .cta-button {
      display: inline-block;
      padding: 1rem 2.5rem;
      background: var(--accent-color);
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      transition: var(--transition);
      box-shadow: 0 4px 15px rgba(74, 144, 181, 0.3);
    }

    .cta-button:hover {
      background: var(--secondary-color);
      transform: translateY(-3px);
      box-shadow: 0 6px 25px rgba(74, 144, 181, 0.4);
    }

    /* Services Cards */
    .services {
      background-repeat: repeat;
      background-size: auto;
      padding: 4rem 20px;
    }

    .section-title {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 3rem;
      position: relative;
      padding-bottom: 1rem;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 4px;
      border-radius: 2px;
    }
    
    /* Photos atelier */
    .workshop-photos {
      margin: 3rem 0;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      border-radius: var(--border-radius);
      overflow: hidden;
    }
    
    .workshop-photos img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      transition: var(--transition);
    }
    
    .workshop-photos img:hover {
      transform: scale(1.05);
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .service-card {
      background: white;
      padding: 2rem;
      border-radius: var(--border-radius);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      transition: var(--transition);
      border: 2px solid transparent;
    }

    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
      border-color: var(--accent-color);
    }

    .service-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .service-card h3 {
      color: var(--primary-color);
      margin-bottom: 1rem;
      font-size: 1.3rem;
    }

    .service-card p {
      color: var(--text-light);
      line-height: 1.6;
    }

    /* Process Section */
    .process {
      background-repeat: repeat;
      background-size: auto;
      padding: 4rem 20px;
    }
    .process2 {
      background-repeat: repeat;
      background-size: auto;
      padding: 4rem 20px;
    }

    .process-container {
      max-width: 1000px;
      margin: 0 auto;
    }

    .process h2 {
      font-size: 2em;
      font-variant: small-caps;
      color: black;
      margin-bottom: 1.5rem;
      line-height: 1.3;
      font-family: "Calibri", sans-serif;
    }

    .process2 h2 {
      font-size: 2em;
      font-variant: small-caps;
      color: black;
      margin-bottom: 1.5rem;
      line-height: 1.3;
      font-family: "Calibri", sans-serif;
    }

    .process-step {
      background: white;
      padding: 2rem;
      border-radius: var(--border-radius);
      margin-bottom: 2rem;
      border-left: 5px solid var(--accent-color);
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
      transition: var(--transition);
    }

    .process-step:hover {
      transform: translateX(5px);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .step-number {
      display: inline-block;
      width: 40px;
      height: 40px;
      background: var(--accent-color);
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 40px;
      font-weight: bold;
      margin-right: 1rem;
      font-size: 1.2rem;
    }

    .process-step h3 {
      color: var(--primary-color);
      display: inline-block;
      font-size: 1.4rem;
      margin-bottom: 1rem;
    }

    .process-step p, .process-step ul {
      margin-top: 1rem;
      color: var(--text-light);
    }

    .process-step ul {
      list-style: none;
      padding-left: 0;
    }

    .process-step li {
      padding: 0.5rem 0;
      padding-left: 1.5rem;
      position: relative;
    }

    .process-step li::before {
      content: '✓';
      position: absolute;
      left: 0;
      color: var(--accent-color);
      font-weight: bold;
    }
    
    /* Options de dépôt */
    .deposit-options {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin: 2rem 0;
    }
    
    .option-card {
      background: white;
      padding: 2rem;
      border-radius: var(--border-radius);
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
      border: 3px solid var(--bg-light);
      transition: var(--transition);
      text-align: center;
    }
    
    .option-card:hover {
      border-color: var(--accent-color);
      transform: translateY(-3px);
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
    }
    
    .option-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    
    .option-card h4 {
      color: var(--primary-color);
      font-size: 1.3rem;
      margin-bottom: 1rem;
    }
    
    .option-link {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.6rem 1.5rem;
      background: var(--accent-color);
      color: white;
      text-decoration: none;
      border-radius: 25px;
      font-weight: 600;
      transition: var(--transition);
      font-size: 0.95rem;
    }
    
    .option-link:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
    }

    /* Contact Form */
    .contact-section {
      padding: 4rem 20px;
    }

    .contact-container {
      max-width: 700px;
      margin: 0 auto;
    }

    .form-intro {
      text-align: center;
      margin-bottom: 2rem;
      color: var(--text-light);
    }

    form {
      background: white;
      padding: 2.5rem;
      border-radius: var(--border-radius);
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      color: var(--primary-color);
      font-weight: 600;
    }

    input, textarea, select {
      width: 100%;
      padding: 0.9rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-family: inherit;
      font-size: 1rem;
      transition: var(--transition);
    }

    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(74, 144, 181, 0.1);
    }

    textarea {
      resize: vertical;
      min-height: 150px;
    }

    button[type="submit"] {
      width: 100%;
      padding: 1.2rem;
      background: var(--accent-color);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
    }

    button[type="submit"]:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(74, 144, 181, 0.3);
    }

    /* Footer */
    footer {
      background: var(--primary-color);
      color: white;
      text-align: center;
      padding: 2rem;
    }

    footer p {
      opacity: 0.9;
    }
    
    /* Page réparation par correspondance */
    .back-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.7rem 1.5rem;
      background: var(--bg-light);
      color: var(--primary-color);
      text-decoration: none;
      border-radius: 25px;
      font-weight: 600;
      transition: var(--transition);
      margin-bottom: 2rem;
    }
    
    .back-button:hover {
      background: var(--accent-color);
      color: white;
    }

    .contact-section h2 {
      font-size: 2em;
      font-variant: small-caps;
      color: black;
      margin-bottom: 1.5rem;
      line-height: 1.3;
      font-family: "Calibri", sans-serif;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero h2 {
        font-size: 1.8rem;
      }

      .hero p {
        font-size: 1rem;
      }

      .brand h1 {
        font-size: 1.3rem;
      }

      .section-title {
        font-size: 1.6rem;
      }

      .process-step h3 {
        display: block;
        margin-top: 1rem;
      }

      .pricing-detail {
        font-size: 2rem;
      }

      form {
        padding: 1.5rem;
      }
      
      .workshop-photos {
        grid-template-columns: 1fr;
      }
      
      .workshop-photos img {
        height: 200px;
      }
      
      .deposit-options {
        grid-template-columns: 1fr;
      }
    }

    /* Smooth scroll */
    html {
      scroll-behavior: smooth;
    }

    /* Animation on scroll */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .service-card, .process-step {
      animation: fadeInUp 0.6s ease-out;
    }
  </style>
  
